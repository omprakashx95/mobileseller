<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FA"
    android:orientation="vertical"

    tools:context=".Color_Quantity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model no"
                android:textSize="20dp"

                android:layout_gravity="center"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="A mobile phone is a wireless handheld device that allows users to make and receive calls and to send text messages, among other features. The earliest generation of mobile phones could only make and receive calls. ... A mobile phone may also be known as a cellular phone or simply a cell phone"
                android:maxLines="4"/>






        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view1"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#FA0421" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:gravity="center"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pizza_card_btn"

                android:orientation="horizontal">

            <Button
                android:id="@+id/minus"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="decreaseInteger"
                android:background="@drawable/minus_icon"
                app:backgroundTint="@color/green_color"
                />

            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:text="0"
                android:textStyle="bold"
                app:fontFamily="@font/athiti"
                />

            <Button
                android:id="@+id/plus"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="increaseInteger"
                android:background="@drawable/plus_button"
                app:backgroundTint="@color/green_color"
                />
            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/pizza_card_btn"

                android:id="@+id/mop"
                android:text="mop"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#40A709" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pizza_card_btn"

                android:orientation="horizontal">

            <Button
                android:id="@+id/minus2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="decreaseInteger1"
                android:background="@drawable/minus_icon"
                app:backgroundTint="@color/green_color"
                />

            <TextView
                android:id="@+id/counter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:text="0"
                android:textStyle="bold"
                app:fontFamily="@font/athiti"
                />

            <Button
                android:id="@+id/plus2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="increaseInteger1"
                android:background="@drawable/plus_button"
                app:backgroundTint="@color/green_color"
                />
            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pizza_card_btn"

                android:id="@+id/mop2"
                android:text="mop"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view3"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#0425FA" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pizza_card_btn"

                android:orientation="horizontal">


            <Button
                android:id="@+id/minus3"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="decreaseInteger2"
                android:background="@drawable/minus_icon"
                app:backgroundTint="@color/green_color"
                />

            <TextView
                android:id="@+id/counter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:text="0"
                android:textStyle="bold"
                app:fontFamily="@font/athiti"
                />

            <Button
                android:id="@+id/plus3"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="increaseInteger2"
                android:background="@drawable/plus_button"
                app:backgroundTint="@color/green_color"
                />

            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/pizza_card_btn"

                android:id="@+id/mop3"
                android:text="mop"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view4"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#E09703" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pizza_card_btn"

                android:orientation="horizontal">

            <Button
                android:id="@+id/minus4"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="decreaseInteger3"
                android:background="@drawable/minus_icon"
                app:backgroundTint="@color/green_color"
                />

            <TextView
                android:id="@+id/counter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:text="0"
                android:textStyle="bold"
                app:fontFamily="@font/athiti"
                />

            <Button
                android:id="@+id/plus4"
                android:layout_width="30dp"
                android:onClick="increaseInteger3"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/plus_button"
                app:backgroundTint="@color/green_color"
                />

            </LinearLayout>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/pizza_card_btn"

                android:id="@+id/mop4"
                android:text="mop"/>

        </LinearLayout>

    </LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/total"
    android:layout_marginTop="20dp"
    android:text="0"
    android:layout_gravity="center"/>

     <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#CDDC39"
        android:text="Submit" />
</LinearLayout>