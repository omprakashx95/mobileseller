<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="9">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon"

                        android:layout_marginTop="7dp"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Model"
                        android:id="@+id/text1"
                        android:gravity="center"
                        android:textSize="25dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:id="@+id/text2"
                        android:layout_marginTop="10dp"
                        android:text="Brand"
                        android:textSize="20dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="55dp">

                    </View>

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Category"
                        android:id="@+id/text3"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4.5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view1"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:background="#FA0421" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:background="@drawable/pizza_card_btn"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/minus"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/minus_icon"
                            app:backgroundTint="@color/green_color"
                            />

                        <TextView
                            android:id="@+id/counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="18sp"
                            android:text="0"
                            android:textStyle="bold"
                            app:fontFamily="@font/athiti"
                            />

                        <Button
                            android:id="@+id/plus"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/plus_button"
                            app:backgroundTint="@color/green_color"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view2"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:background="#40A709" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:background="@drawable/pizza_card_btn"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/minus2"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/minus_icon"
                            app:backgroundTint="@color/green_color"
                            />

                        <TextView
                            android:id="@+id/counter2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="18sp"
                            android:text="0"
                            android:textStyle="bold"
                            app:fontFamily="@font/athiti"
                            />

                        <Button
                            android:id="@+id/plus2"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/plus_button"
                            app:backgroundTint="@color/green_color"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view3"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:background="#0425FA" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:background="@drawable/pizza_card_btn"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/minus3"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/minus_icon"
                            app:backgroundTint="@color/green_color"
                            />

                        <TextView
                            android:id="@+id/counter3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="18sp"
                            android:text="0"
                            android:textStyle="bold"
                            app:fontFamily="@font/athiti"
                            />

                        <Button
                            android:id="@+id/plus3"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/plus_button"
                            app:backgroundTint="@color/green_color"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view4"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:background="#E09703" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:background="@drawable/pizza_card_btn"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/minus4"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/minus_icon"
                            app:backgroundTint="@color/green_color"
                            />

                        <TextView
                            android:id="@+id/counter4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="18sp"
                            android:text="0"
                            android:textStyle="bold"
                            app:fontFamily="@font/athiti"
                            />

                        <Button
                            android:id="@+id/plus4"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/plus_button"
                            app:backgroundTint="@color/green_color"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
